  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'Build completed'",
    "test": "jest",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "seed:dev": "NODE_ENV=development node seed.js",
